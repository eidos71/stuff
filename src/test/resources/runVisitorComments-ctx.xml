	<!--  DATABASESOURCE -->

	<beans:bean id="dataSource" destroy-method="close"
		class="org.apache.commons.dbcp.BasicDataSource">
		<beans:property name="driverClassName" value="${jdbc.driver}" />
		<beans:property name="url" value="${jdbc.urdb.url}" />
		<beans:property name="username" value="${jdbc.urdb.username}" />
		<beans:property name="password" value="${jdbc.urdb.password}" />

		<beans:property name="maxActive" value="10" />
		<beans:property name="testOnBorrow" value="true" />
		<beans:property name="validationQuery" value="select 1" />
		<beans:property name="testWhileIdle" value="true" />
		<beans:property name="timeBetweenEvictionRunsMillis" value="10000" />
		<beans:property name="minEvictableIdleTimeMillis" value="60000" />
	</beans:bean>
